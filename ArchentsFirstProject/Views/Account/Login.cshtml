@model  ArchentsFirstProject.Models.UserLogin
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        .form-horizontal{
            margin-left:300px;
            margin-top:300px;
        }
        #btn12{
            margin-top:10px;
            border-radius:20px;
            background-color:black;
        }
        .aaa h4 {
            margin: 5px;
            color: var(--textColor);
        }
    </style>
</head>
<body>
    <div class="container">
        
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h1>Sign in to your account</h1>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @if (ViewBag.Message != "")
            {
                <div class="text-danger">*@ViewBag.Message</div>
            }

            <div class="form-group">
                @Html.LabelFor(model => model.EmailID, htmlAttributes: new { @class = "control-label " })
                <div class="form-group-lg ">
                    @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control w-50" } })
                    @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label " })
                <div class="form-group-lg">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control w-50" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Sign In" id="btn12" />
                <div class="aaa" style="display:flex;">
                    <h4> @Html.ActionLink("Forgot your password?", "ForgotPassword", "Account", new { style = "text-decoration:none; color:black" })</h4>
                    <h4>  @Html.ActionLink("Not a member?", "UserRegister", "Account", new { style = "text-decoration:none; color:black" })</h4>
                    <h4>@Html.ActionLink("Register here", "UserRegister", "Account", new { style = "text-decoration:none; color:black" })</h4>

                </div>
            </div>
        </div>
        }
    </div>
</body>
</html>
